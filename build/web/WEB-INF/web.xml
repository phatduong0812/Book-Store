<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>SITEMAP_PROPERTIES_FILE_LOCATION</param-name>
        <param-value>/WEB-INF/siteMap.properties</param-value>
    </context-param>
    <context-param>
        <param-name>AUTHENTICATION_PROPERTIES_FILE_LOCATION</param-name>
        <param-value>/WEB-INF/authentication.properties</param-value>
    </context-param>
    <filter>
        <filter-name>DispatcherFilter</filter-name>
        <filter-class>phatdg.filter.DispatcherFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>phatdg.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DispatcherFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>phatdg.listener.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>AuthLoginServlet</servlet-name>
        <servlet-class>phatdg.servlet.AuthLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountSearchServlet</servlet-name>
        <servlet-class>phatdg.servlet.AccountSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountDeleteServlet</servlet-name>
        <servlet-class>phatdg.servlet.AccountDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountUpdateServlet</servlet-name>
        <servlet-class>phatdg.servlet.AccountUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthRegisterServlet</servlet-name>
        <servlet-class>phatdg.servlet.AuthRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoreViewServlet</servlet-name>
        <servlet-class>phatdg.servlet.StoreViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartAddItemServlet</servlet-name>
        <servlet-class>phatdg.servlet.CartAddItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartDeleteItemServlet</servlet-name>
        <servlet-class>phatdg.servlet.CartDeleteItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthLogoutServlet</servlet-name>
        <servlet-class>phatdg.servlet.AuthLogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartUpServlet</servlet-name>
        <servlet-class>phatdg.servlet.StartUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoogleServlet</servlet-name>
        <servlet-class>phatdg.servlet.GoogleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileUpdateServlet</servlet-name>
        <servlet-class>phatdg.servlet.ProfileUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartViewServlet</servlet-name>
        <servlet-class>phatdg.servlet.CartViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOutServlet</servlet-name>
        <servlet-class>phatdg.servlet.CheckOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthLoginServlet</servlet-name>
        <url-pattern>/AuthLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountSearchServlet</servlet-name>
        <url-pattern>/AccountSearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountDeleteServlet</servlet-name>
        <url-pattern>/AccountDeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountUpdateServlet</servlet-name>
        <url-pattern>/AccountUpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthRegisterServlet</servlet-name>
        <url-pattern>/AuthRegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoreViewServlet</servlet-name>
        <url-pattern>/StoreViewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartAddItemServlet</servlet-name>
        <url-pattern>/CartAddItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartDeleteItemServlet</servlet-name>
        <url-pattern>/CartDeleteItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthLogoutServlet</servlet-name>
        <url-pattern>/AuthLogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartUpServlet</servlet-name>
        <url-pattern>/StartUpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoogleServlet</servlet-name>
        <url-pattern>/GoogleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileUpdateServlet</servlet-name>
        <url-pattern>/ProfileUpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartViewServlet</servlet-name>
        <url-pattern>/CartViewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOutServlet</servlet-name>
        <url-pattern>/CheckOutServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>MyDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
